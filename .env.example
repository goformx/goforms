# =============================================
# Application Core Settings
# =============================================
GOFORMS_APP_NAME=goforms
GOFORMS_APP_ENV=development
GOFORMS_APP_DEBUG=false
GOFORMS_APP_LOGLEVEL=info
GOFORMS_APP_VERSION=0.1.0

# =============================================
# Server Configuration
# =============================================
GOFORMS_APP_HOST=0.0.0.0
GOFORMS_APP_PORT=8090

# Server Timeouts (in seconds)
GOFORMS_READ_TIMEOUT=5s
GOFORMS_WRITE_TIMEOUT=10s
GOFORMS_IDLE_TIMEOUT=120s
GOFORMS_REQUEST_TIMEOUT=30s

# =============================================
# Database Configuration
# =============================================
# Database Driver Selection (postgres or mariadb)
GOFORMS_DB_DRIVER=postgres

# PostgreSQL Configuration
GOFORMS_POSTGRES_HOST=localhost
GOFORMS_POSTGRES_PORT=5432
GOFORMS_POSTGRES_USER=your_db_user
GOFORMS_POSTGRES_PASSWORD=your_secure_password
GOFORMS_POSTGRES_DB=your_db_name
GOFORMS_POSTGRES_SSLMODE=disable

# PostgreSQL Connection Pool Settings
GOFORMS_POSTGRES_MAX_OPEN_CONNS=25
GOFORMS_POSTGRES_MAX_IDLE_CONNS=5
GOFORMS_POSTGRES_CONN_MAX_LIFETIME=5m

# MariaDB Configuration (if using MariaDB)
GOFORMS_MARIADB_HOST=localhost
GOFORMS_MARIADB_PORT=3306
GOFORMS_MARIADB_USER=your_db_user
GOFORMS_MARIADB_PASSWORD=your_secure_password
GOFORMS_MARIADB_NAME=your_db_name
GOFORMS_MARIADB_ROOT_PASSWORD=your_secure_root_password

# MariaDB Connection Pool Settings
GOFORMS_MARIADB_MAX_OPEN_CONNS=25
GOFORMS_MARIADB_MAX_IDLE_CONNS=5
GOFORMS_MARIADB_CONN_MAX_LIFETIME=5m

# =============================================
# Security Configuration
# =============================================
# Session Settings
GOFORMS_SESSION_SECURE=true

# CSRF Settings
GOFORMS_CSRF_ENABLED=true
GOFORMS_CSRF_SECRET=your_secure_csrf_secret_key

# CORS Settings
GOFORMS_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
GOFORMS_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
GOFORMS_CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With
GOFORMS_CORS_MAX_AGE=3600
GOFORMS_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting Configuration
GOFORMS_RATE_LIMIT_ENABLED=true
GOFORMS_RATE_LIMIT=100
GOFORMS_RATE_BURST=5
GOFORMS_RATE_LIMIT_TIME_WINDOW=1m
GOFORMS_RATE_LIMIT_PER_IP=true

# =============================================
# Development Settings
# =============================================
GOFORMS_VITE_DEV_HOST=localhost
GOFORMS_VITE_DEV_PORT=3000

# =============================================
# User Configuration
# =============================================
# Admin User
GOFORMS_ADMIN_EMAIL=admin@example.com
GOFORMS_ADMIN_PASSWORD=change_this_password
GOFORMS_ADMIN_FIRST_NAME=Admin
GOFORMS_ADMIN_LAST_NAME=User

# Default User
GOFORMS_USER_EMAIL=user@example.com
GOFORMS_USER_PASSWORD=change_this_password
GOFORMS_USER_FIRST_NAME=Default
GOFORMS_USER_LAST_NAME=User
