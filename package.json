{
  "name": "goforms",
  "version": "1.0.0",
  "description": "Go Forms Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint ./src --ext .ts,.tsx,.js,.jsx,.css",
    "lint:fix": "eslint ./src --ext .ts,.tsx,.js,.jsx,.css --fix",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css}\"",
    "postinstall": "mkdir -p public/fonts && cp -r node_modules/@formio/js/dist/fonts/* public/fonts/"
  },
  "dependencies": {
    "@formio/js": "^5.1.1",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@goformx/formio": "^0.1.2",
    "ace-builds": "^1.41.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/css": "^0.7.0",
    "@eslint/js": "^9.26.0",
    "@eslint/json": "^0.12.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.17",
    "@types/postcss-import": "^14.0.3",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.26.0",
    "eslint-plugin-css": "^0.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.1.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.5.3",
    "terser": "^5.39.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5"
  }
}
